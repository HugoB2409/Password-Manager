include mixins/base

html
    head
        meta(charset="utf-8")
        title="Eruces inscription"
        link(href="/stylesheets/style.css" rel="stylesheet")
    body
        #general-wrapper.container-fluid
            .row
                .col-6.p-0
                    h1 ERUCES
                    p Gestionnaire de mots de passe et de cartes de crédit
                .col-6.p-0
                    div
                        +flash
                        +form("post", "/signup")
                            .form-group
                                label Email
                                input.form-control(type="text" name="email")
                            .form-group
                                label Surnom
                                input.form-control(type="text" name="username")
                            .form-group
                                label Prénom
                                input.form-control(type="text" name="firstName")
                            .form-group
                                label Nom de famille
                                input.form-control(type="text" name="lastName")
                            .form-group
                                label Mot de passe
                                input.form-control(type="password" name="password")
                            .text-right
                                button.btn.btn-success.btn-sm S'inscrire
                            hr
                            .text-center
                                a.btn.btn-info.btn-sm(href="/login")="Retour"