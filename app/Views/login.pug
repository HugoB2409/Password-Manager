include mixins/base

html
    head
        meta(charset="utf-8")
        title="Demo connexion"
        link(href="/stylesheets/style.css" rel="stylesheet")
    body
        #general-wrapper.container-fluid
            .row
                .col-6.p-0
                    h1 ERUCES
                    p Gestionnaire de mots de passe et de cartes de crédit
                .col-6.p-0
                    div
                        +flash
                        +form("post", "/login")
                            .form-group
                                label Email
                                input.form-control(name="email")
                            .form-group
                                label Mot de passe
                                input.form-control(type="password" name="password")
                            .text-right
                                button.btn.btn-sm.btn-success connexion
                            hr
                            .text-center
                                a.btn.btn-info.btn-sm(href="/signup")="Créer un compte"